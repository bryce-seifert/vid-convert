{
	"name": "vid-convert",
	"version": "0.0.19",
	"description": "A simple, no-frills video converter",
	"main": "main.js",
	"author": "Bryce Seifert",
	"repository": {
		"type": "git",
		"url": "https://github.com/bryce-seifert/vid-convert.git"
	},
	"scripts": {
		"start": "electron .",
		"dist": "electron-builder",
		"dist-x64": "rm -rf ./app/node_modules && npm install && electron-builder build --mac pkg --x64",
		"publish": "electron-builder --p onTagOrDraft"
	},
	"build": {
		"appId": "com.bryce-seifert.video-convert",
		"productName": "Vid Convert",
		"asar": false,
		"mac": {
			"category": "public.app-category.video",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"target": [
				{
					"target": "default",
					"arch": [
						"x64"
					]
				}
			],
			"fileAssociations": [
				{
					"ext": [
						"mp4",
						"mov",
						"avi",
						"webm",
						"flv"
					],
					"description": "Video files",
					"role": "Viewer"
				}
			]
		},
		"afterSign": "scripts/notarize.js"
	},
	"publish": {
		"provider": "github"
	},
	"keywords": [
		"video",
		"convert"
	],
	"devDependencies": {
		"electron": "^28.0.0",
		"electron-builder": "^24.9.1"
	},
	"dependencies": {
		"@electron/notarize": "^2.2.0",
		"electron-reload": "^2.0.0-alpha.1",
		"electron-updater": "^6.1.7",
		"ffmpeg-static": "^5.2.0",
		"fluent-ffmpeg": "^2.1.2"
	}
}
